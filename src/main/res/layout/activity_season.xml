<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_season"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/season_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/action_bar_bacground"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/im_but_menu"
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/action_menu" />

        <TextView
            android:id="@+id/tv_season_toobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_people"
            android:textColor="#fff"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/season_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_rectangle"
        android:layout_alignBottom="@id/view_zhanwei"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:elevation="5dp"
        android:translationZ="5dp"
        android:outlineProvider="background"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/iv_season_menu_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/season_menu_add"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:text="@string/add"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/iv_season_menu_farm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_season_menu_farm_but"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/season_menu_farm"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:text="@string/crops"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/iv_season_menu_pick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_season_menu_pick_but"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/season_menu_pick"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:text="@string/season_pick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/iv_season_menu_fish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_season_menu_fish_but"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/season_menu_fish"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:text="@string/fish"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/iv_season_menu_remove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/season_menu_remove"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="10sp"
                android:text="@string/gone"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ll_season_min_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_shap"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/season_menu"
        android:elevation="5dp"
        android:translationZ="5dp"
        android:outlineProvider="background"
        android:src="@drawable/season_menu_add"
        android:padding="10dp"
        android:visibility="invisible"
        android:orientation="vertical"/>
    <View
        android:id="@+id/view_zhanwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/sf_season"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/season_toolbar"
        />
</RelativeLayout>