<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/news_content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fitsSystemWindows="true"
        app:contentInsetStart="0dp"
        android:layout_gravity="center"
        android:background="@drawable/action_bar_bacground">
        <ImageButton
            android:id="@+id/im_but_finish"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="@string/news_content"/>
        <ImageButton
            android:id="@+id/im_but_house"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>
    </android.support.v7.widget.Toolbar>
    <ProgressBar
        android:id="@+id/pb_news"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:layout_below="@id/news_content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_write_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="我全都要?《星露谷物语》这次更新击碎了你的幻想"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/tv_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东方网  2018年05月08日 08:18"
                android:layout_margin="5dp"
                android:layout_below="@id/tv_write_title"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_lll"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv_writer"
                android:layout_marginRight="5dp"/>
            <WebView
                android:id="@+id/web_view"
                android:layout_below="@id/iv_lll"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </WebView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
