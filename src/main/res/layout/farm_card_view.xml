<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="3dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="#7cdebd">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_margin="3dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_toRightOf="@id/card_1"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_3"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_below="@id/card_1"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="3dp"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_1"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/card_3"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_5"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_4"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/card_3"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_6"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_3"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="3dp"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_7"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_below="@id/card_3"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/card_6"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_6"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_margin="3dp"
            android:background="#000">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/card_6"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/card_8"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="#000">

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>